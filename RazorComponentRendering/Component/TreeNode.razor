@* TreeNode.razor *@
<div style="padding-left: @(Level*10)px">Node: @Node.Name</div>

@foreach (var child in Node.Children)
{
    <TreeNode Node="child" Level="Level + 1" />
}

@code {
    [Parameter]
    public TreeNodeData Node { get; set; }

    [Parameter]
    public int Level { get; set; } = 0;
}
